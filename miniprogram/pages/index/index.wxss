
.text-wrap{
  background-color: #fff;
  padding:20rpx 20rpx;
  border-top-left-radius: 35rpx;
  border-top-right-radius: 35rpx;
}
.text-wrap .text{
  padding:0 20rpx;
  border-left: 5px solid rgb(61,105,225);
  font-weight: 700;
  font-size: 28rpx;
}

.circle{
  position: absolute;
  top: 28%;
  right: 10rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color:rgb(65,105,227);
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiper-item {
  position: relative;
  overflow: visible !important;
}
.background-img{
  height:300rpx;
  width: 100%;
  background-image: url(https://picx.zhimg.com/v2-20053b78364360eb9a37a846c40e2292_1440w.jpg?source=172ae18b);
  background-position:center;
  background-size: cover;
  color: #fff;
  padding-left: 20rpx;
}

.rumors-text{
  display: block;
  padding-top:50rpx;
  margin-left: 10rpx;
  font-size: 75rpx;
  font-weight: 600;
}

.rumors-title{
  padding-top:25rpx;
  margin-left: 10rpx;
  display: block;
  font-size: 36rpx;
  font-weight: 500;
}

.rumors-img{
  width: 250rpx !important;
  height:250rpx !important;
  position: absolute;
  top: -10px;
  right:10px;
  z-index: 10;
}

/* map */
.map {
  position: relative;
  margin-top: 20rpx;
  height: 500rpx;
  box-sizing: border-box;
}

.ec-loading {
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#mychart-dom-bar {
  display: block;
  width: 100%;
  height: 500rpx;
}

/* 底部 */
.footer {
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}